datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model About {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  isActive    Boolean  @default(true)
  updatedAt   DateTime @updatedAt

  @@map("about")
}

model Event {
  id          Int      @id @default(autoincrement())
  uniqueId    String   @unique
  slug        String   @unique
  title       String
  summary     String   @db.Text
  url         String
  image       String
  picPath     String
  day         String
  eventName   String
  location    String
  start       DateTime
  end         DateTime
  date        DateTime
  paragraphs  Json     // Array of strings
  organizer   Json     // { phone, email }
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("events")
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  name      String
  position  String
  testimony String
  pic       String?
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  @@map("testimonials")
}

model OrgContactInfo {
  id         Int      @id @default(autoincrement())
  phone      String
  email      String
  location   String
  social     Json     // [{ fb: "" }, { ig: "" }, ...]
  isActive   Boolean  @default(true)
  updatedAt  DateTime @updatedAt

  @@map("org_contact_info")
}

model User {
  id         Int      @id @default(autoincrement())
  fullName   String
  position   String?
  phone      String?
  email      String   @unique
  password   String   // hashed
  address    String?
  city       String?
  state      String?
  zipCode    String?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  role       Role     @default(USER)

  @@map("users")
}

enum Role {
  ADMIN
  USER
}

model MemberRequest {
  id          Int      @id @default(autoincrement())
  reason      String
  firstName   String
  lastName    String
  email       String
  phone       String
  address     String
  apartment   String?
  city        String
  state       String
  zipCode     String
  notes       String?
  isActive    Boolean  @default(true)
  submittedAt DateTime @default(now())

  @@map("member_requests")
}


